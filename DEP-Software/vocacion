const questionsDiv = document.getElementById('questions');
const progressBar = document.getElementById('progressBar');
const progressText = document.getElementById('progressText');
const prevBtn = document.getElementById('prevBtn');
const nextBtn = document.getElementById('nextBtn');
const submitBtn = document.getElementById('submitBtn');
const floatingBtn = document.getElementById('floatingBtn');
const resultDiv = document.getElementById('result');

let currentPage = 0;
const questionsPerPage = 6;
let answers = Array(questions.length).fill(null);
let currentResults = null;

function renderQuestions() {
  questionsDiv.innerHTML = '';
  const start = currentPage * questionsPerPage;
  const end = Math.min(start + questionsPerPage, questions.length);

  for (let i = start; i < end; i++) {
    const q = questions[i];
    let optionsHtml = '';
    
    q.options.forEach((option, idx) => {
      const isChecked = answers[i] === idx;
      optionsHtml += `
        <div class="form-check mb-2">
          <input class="form-check-input" type="radio" name="q${i}" id="q${i}-${idx}" value="${idx}" ${isChecked ? 'checked' : ''} required>
          <label class="form-check-label option-label" for="q${i}-${idx}">${option.text}</label>
        </div>
      `;
    });
    
    questionsDiv.innerHTML += `
      <div class="question-card">
        <h5 class="fw-semibold mb-3">${i + 1}. ${q.text}</h5>
        ${optionsHtml}
      </div>
    `;
  }

  updateProgress();
  prevBtn.disabled = currentPage === 0;
  nextBtn.classList.toggle('hidden', end === questions.length);
  submitBtn.classList.toggle('hidden', end !== questions.length);
}

function updateProgress() {
  const totalPages = Math.ceil(questions.length / questionsPerPage);
  const progress = ((currentPage + 1) / totalPages) * 100;
  progressBar.style.width = progress + '%';
  progressText.textContent = Math.round(progress) + '% completado';
}

function savePageAnswers() {
  const start = currentPage * questionsPerPage;
  const end = Math.min(start + questionsPerPage, questions.length);

  for (let i = start; i < end; i++) {
    const checkedRadio = document.querySelector(`input[name="q${i}"]:checked`);
    if (checkedRadio) {
      answers[i] = parseInt(checkedRadio.value);
    }
  }
}

nextBtn.addEventListener('click', () => {
  if (validatePage()) {
    savePageAnswers();
    currentPage++;
    renderQuestions();
    window.scrollTo({ top: 0, behavior: 'smooth' });
  }
});

prevBtn.addEventListener('click', () => {
  savePageAnswers();
  currentPage--;
  renderQuestions();
  window.scrollTo({ top: 0, behavior: 'smooth' });
});

function validatePage() {
  const start = currentPage * questionsPerPage;
  const end = Math.min(start + questionsPerPage, questions.length);

  for (let i = start; i < end; i++) {
    const radios = document.getElementsByName(`q${i}`);
    if (![...radios].some(r => r.checked)) {
      alert('Por favor, responda todas as perguntas desta p√°gina antes de continuar.');
      return false;
    }
  }
  return true;
}

// Fun√ß√£o para obter ranking ordenado dos tipos vocacionais
function getVocationalRanking(scores, percentages) {
  const typeNames = {
    realista: "Realista (R)",
    investigativo: "Investigativo (I)", 
    artistico: "Art√≠stico (A)",
    social: "Social (S)",
    empreendedor: "Empreendedor (E)",
    convencional: "Convencional (C)"
  };

  // Criar array com todos os tipos e suas pontua√ß√µes
  const ranking = Object.keys(scores).map(type => ({
    type: type,
    name: typeNames[type],
    score: scores[type],
    percentage: parseFloat(percentages[type])
  }));

  // Ordenar por percentagem (maior para menor)
  ranking.sort((a, b) => b.percentage - a.percentage);

  return ranking;
}

function calculatePercentages(scores) {
  // Calcular o total de pontos obtidos em todos os tipos
  const totalScore = Object.values(scores).reduce((sum, score) => sum + score, 0);
  
  const percentages = {};
  
  // Se n√£o h√° pontua√ß√£o total (todas respostas zero), distribuir igualmente
  if (totalScore === 0) {
    const equalPercentage = (100 / Object.keys(scores).length).toFixed(1);
    for (let type in scores) {
      percentages[type] = equalPercentage;
    }
  } else {
    // Calcular percentagem relativa ao total de pontos
    for (let type in scores) {
      percentages[type] = ((scores[type] / totalScore) * 100).toFixed(1);
    }
    
    // Garantir que a soma seja exatamente 100%
    const totalPercentage = Object.values(percentages).reduce((sum, p) => sum + parseFloat(p), 0);
    
    if (Math.abs(totalPercentage - 100) > 0.1) {
      // Ajustar o tipo dominante para compensar a diferen√ßa
      const dominantType = getVocationalRanking(scores, percentages)[0].type;
      const adjustment = (100 - totalPercentage).toFixed(1);
      percentages[dominantType] = (parseFloat(percentages[dominantType]) + parseFloat(adjustment)).toFixed(1);
    }
  }
  
  return percentages;
}

function getCareerMatchLevel(percentage) {
  if (percentage >= 20) return "Alto";
  if (percentage >= 15) return "Bom";
  if (percentage >= 10) return "Moderado";
  return "Baixo";
}

function formatResultsForWhatsApp(percentages, ranking) {
  let message = `üéì *RESULTADO DO TESTE DE ORIENTA√á√ÉO VOCACIONAL*\n\n`;
  
  // Tipo predominante
  message += `üéØ *√Årea Predominante:* ${ranking[0].name} (${ranking[0].percentage}%)\n`;
  
  // Tipo secund√°rio (se houver diferen√ßa significativa)
  if (ranking.length > 1 && ranking[1].percentage > 10) {
    message += `ü•à *√Årea Secund√°ria:* ${ranking[1].name} (${ranking[1].percentage}%)\n`;
  }
  
  message += `\nüìä *Ranking Completo (Modelo RIASEC):*\n`;
  
  ranking.forEach((type, index) => {
    const emoji = index === 0 ? "ü•á" : index === 1 ? "ü•à" : index === 2 ? "ü•â" : "‚ñ´Ô∏è";
    message += `${emoji} ${type.name}: ${type.percentage}%\n`;
  });
  
  message += `\nüí° *Pr√≥ximos Passos:* Use essas informa√ß√µes para pesquisar carreiras espec√≠ficas e conversar com profissionais das √°reas sugeridas!\n\n`;
  message += `_Enviado via DEP - Desbloqueio Estrat√©gico de Potencial_`;
  
  return message;
}

function shareWithWhatsApp(percentages, ranking) {
  const message = formatResultsForWhatsApp(percentages, ranking);
  const encodedMessage = encodeURIComponent(message);
  const whatsappUrl = `https://wa.me/?text=${encodedMessage}`;
  window.open(whatsappUrl, '_blank');
}

